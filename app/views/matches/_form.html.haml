= form_for @match do |f|
  - if @match.errors.any?
    .errors
      = @match.errors.full_messages.join(', ').downcase.capitalize
  = f.label :name, "Match Name"
  = f.text_field :name, required: true
  %br
  %br
  = label_tag "Add Players (up to 10, can add more later)"
  %br
  %br
  UPI is Unique Player Identifier (e.g., "A1")
  %br
  %br
  = f.fields_for :players do |p|
    .add-player-fields.hidden-add-player
      = p.label :upi, "UPI"
      = p.text_field :upi
      = p.label :first_name
      = p.text_field :first_name
      = p.label :last_name
      = p.text_field :last_name
      %br
  %br
  = f.submit